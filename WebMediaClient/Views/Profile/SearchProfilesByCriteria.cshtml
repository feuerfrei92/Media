@model WebMediaClient.Models.ProfileCriteriaViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SearchProfilesByCriteria</title>
</head>
<body>
    <div class="row"> 
		<div class="col-md-8">
		<section id="search_form">
			@using (Html.BeginForm("SearchProfilesByCriteria", "Profile", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.MinimumAge, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.MinimumAge, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.MinimumAge, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.MaximumAge, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.MaximumAge, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.MaximumAge, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Search" class="btn btn-default" />
					</div>
				</div>
			}
		</section>
		</div>
	</div>
</body>
</html>
