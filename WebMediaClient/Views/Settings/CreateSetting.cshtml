@model WebMediaClient.Models.SettingViewModel

<div class="row">
	<div class="col-md-8">
		<section id="topic_form">
			@using (Html.BeginForm("CreateSetting", "Setting", new { OwnerID = @ViewBag.OwnerID }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.OwnerType, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.EnumDropDownListFor(m => m.OwnerType, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.OwnerType, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Publicity, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.EnumDropDownListFor(m => m.Publicity, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Publicity, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="@Resources.Create" class="btn btn-default" />
					</div>
				</div>
			}
		</section>
	</div>
</div>

