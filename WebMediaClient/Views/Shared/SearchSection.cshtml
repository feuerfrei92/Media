@model WebMediaClient.Models.SectionViewModel

<ul id="actions_list" class="nav navbar-nav navbar-right">
	@using (Html.BeginForm("SearchBySectionName", "Section", null, FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<li>
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
		</li>
		<li><input type="submit" value="Search" class="btn btn-default" /></li>
	}
</ul>

